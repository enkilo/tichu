# $Id: Makefile.in,v 1.63 2005/05/23 02:12:17 smoli Exp $
# ===========================================================================
#
# Makefile for tichu/src subdirectory
#
# relative directories
# ---------------------------------------------------------------------------
srcdir       = @srcdir@
top_srcdir   = @top_srcdir@
top_builddir = @top_builddir@
thisdir      = @thisdir@

VPATH        = $(srcdir)

# include global make configuration
# ---------------------------------------------------------------------------
include $(top_builddir)config.mk

# configuration for this directory
# ---------------------------------------------------------------------------
PROGRAM = tichu-client
MODULES = action \
          card \
          client \
          dlink \
          dnd \
          fan \
          game \
          gfxutil \
          ini \
          net \
          player \
          queue \
          reply \
          sound \
          stack \
          ui \
          ui_chat \
          ui_config \
          ui_game \
          ui_help \
          ui_main \
          ui_settings \
          ui_sound
             
UI_MODULES = ui_config_card \
             ui_config_client \
             ui_config_fan \
             ui_config_stack \
          
SOURCES = $(MODULES:%=%.c) $(UI_MODULES:%=%.c)
HEADERS = $(MODULES:%=%.h)
OBJECTS = $(MODULES:%=%.o) $(UI_MODULES:%=%.o)
DEPS    = $(MODULES:%=%.d) $(UI_MODULES:%=%.d)

CONFIG_H_IN = $(top_srcdir)/config.h.in
CONFIG_H    = $(top_builddir)config.h

# targets for this directory
# ---------------------------------------------------------------------------
all: Makefile $(PROGRAM)
install: install-exec

# dependencies
# ---------------------------------------------------------------------------
-include $(DEPS)

# install config
# ---------------------------------------------------------------------------
bin_EXEC = $(PROGRAM)

# build config
# ---------------------------------------------------------------------------
INCLUDES += -I$(srcdir) 
INCLUDES += -I$(top_srcdir)/mixer
INCLUDES += -I.
INCLUDES += -isystem
INCLUDES += $(top_srcdir)/libsgui/include 
INCLUDES += -I$(top_builddir)

LDADD    += $(top_builddir)/libsgui/src/libsgui.a \
            $(top_builddir)/mixer/libmixer.a

CFLAGS   += $(SDL_CFLAGS) $(LIBPNG_CFLAGS)
LIB      += $(SDL_LIBS) $(LIBPNG_LIBS)

# Setzt den Log Level 
DEFS     += -DLOGLEVEL=INFO

# Zeigt die vergangenen Ticks an beim Loggen 
DEFS     += -DDEBUG_TICKS 

# Setzt Debug-Ausgabe für einzelne Module
DEFS     += -DDEBUG_FAN=0 \
            -DDEBUG_PLR=0 \
            -DDEBUG_STK=0 \
            -DDEBUG_DND=0 \
            -DDEBUG_ACT=0 \
            -DDEBUG_CRD=0 \
            -DDEBUG_CLI=1 \
            -DDEBUG_LNK=0 \
            -DDEBUG_GAM=0 \
            -DDEBUG_GFX=0 \
            -DDEBUG_INI=0 \
            -DDEBUG_NET=0 \
            -DDEBUG_QUE=0 \
            -DDEBUG_RPL=0 \
            -DDEBUG_SND=0

# Verlangsamt die Bewegungen innerhalb eines Modules
DEFS     += -DSLOW_FAN=0 \
            -DSLOW_PLR=0 \
            -DSLOW_STK=0 \
            -DSLOW_DND=0 

# dependencies
# ---------------------------------------------------------------------------
client.h: Makefile.in Makefile $(CONFIG_H) 

# include global make targets
# ---------------------------------------------------------------------------
include $(top_builddir)build.mk
