#ifndef SRC_CNODE_H
#define SRC_CNODE_H

/* -------------------------------------------------------------------------- *
 * Types                                                                      *
 * -------------------------------------------------------------------------- */
struct cnode {
  struct node     node;
  struct player  *player;
  struct game    *game;
  struct card    *card;
  int             value;
};

/* -------------------------------------------------------------------------- *
 * Global variables                                                           *
 * -------------------------------------------------------------------------- */
extern int           cnode_log;
extern struct sheap  cnode_heap;

/* -------------------------------------------------------------------------- *
 * Initialize the cnode module                                             *
 * -------------------------------------------------------------------------- */
extern void          cnode_init        (void);

/* -------------------------------------------------------------------------- *
 * Shut down the cnode module                                              *
 * -------------------------------------------------------------------------- */
extern void          cnode_shutdown    (void);

/* -------------------------------------------------------------------------- *
 * -------------------------------------------------------------------------- */
extern struct cnode *cnode_new         (struct game           *game,
                                        struct card           *card);

/* -------------------------------------------------------------------------- *
 * -------------------------------------------------------------------------- */
extern void          cnode_delete      (struct cnode          *cnode);  

/* -------------------------------------------------------------------------- *
 * -------------------------------------------------------------------------- */
extern void          cnode_link        (struct cnode          *cnode, 
                                        struct list           *list);

/* -------------------------------------------------------------------------- *
 * -------------------------------------------------------------------------- */
extern void          cnode_unlink      (struct cnode          *cnode, 
                                        struct list           *list);

/* -------------------------------------------------------------------------- *
 * -------------------------------------------------------------------------- */
extern struct cnode *cnode_find_by_card(struct card           *card, 
                                        struct list           *list);
  
/* -------------------------------------------------------------------------- *
 * -------------------------------------------------------------------------- */
extern struct cnode *cnode_find_by_name(const char            *name, 
                                        struct list           *list);
#endif /* SRC_CNODE_H */
